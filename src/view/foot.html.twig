{% block footer %}
    <div class="fixed-action-btn smooth-scroll wow zoomInUp" style="bottom: 24px; right: 24px; z-index: 10000;">
        <a href="#top-section" class="btn-floating btn aqua-gradient btn-large">
            <i class="iconup p-2 fa fa-arrow-up"></i>
        </a>
    </div>
    <footer class="page-footer text-center wow fadeInUp">
        <div class="py-4">
            <a href="javascript:;" class="p-1 m-0 btn btn-elegant" target="">
                <i class="fa fa-2x fa-facebook mx-1"></i>
            </a>

            <a href="javascript:;" class="p-1 m-0 btn btn-elegant" target="">
                <i class="fa fa-2x fa-twitter mx-1"></i>
            </a>

            <a href="javascript:;" class="p-1 m-0 btn btn-elegant" target="">
                <i class="fa fa-2x fa-youtube mx-1"></i>
            </a>

            <a href="javascript:;" class="p-1 m-0 btn btn-elegant" target="">
                <i class="fa fa-2x fa-google-plus mx-1"></i>
            </a>

            <a href="javascript:;" class="p-1 m-0 btn btn-elegant" target="">
                <i class="fa fa-2x fa-pinterest mx-1"></i>
            </a>
        </div>

        <!--Copyright-->
        <div class="footer-copyright py-3 ">
            <p class="m-0 text-center text-white">{{ title }}
                - Copyright &copy; 2018, Designed and Developed by
                <a href="{{ authorlink }}" target="_blank">{{ author }}</a>
            </p>
        </div>
        <!--/.Copyright-->
    </footer>

    {% block javascripts %}
        <!-- JQuery -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <!-- Bootstrap tooltips -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
        <!-- Bootstrap core JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="https://res.cloudinary.com/tayyab-aziz/raw/upload/v1533368799/js/mdb.min.js"></script>
        <!-- Font Awesome JavaScript -->
        <script defer="defer" src="https://use.fontawesome.com/releases/v5.2.0/js/all.js"></script>
        <script defer="defer" src="https://use.fontawesome.com/releases/v5.2.0/js/v4-shims.js"></script>
        <!-- <script type="text/javascript" src="{{ applicationurl }}js/all.js"></script> <script type="text/javascript" src="{{ applicationurl }}js/v4-shims.js"></script> -->
    {% endblock %}
    <script type="text/javascript">
        new WOW().init();

        //SMOOTH SCROLL
        $(".smooth-scroll").on('click', 'a', function(event) {
            event.preventDefault();
            var elAttr = $(this).attr('href');
            $('body,html').animate({
                scrollTop: $(elAttr).offset().top
            }, 700);
        });/* DROPDOWN */
    </script>
{% endblock %}