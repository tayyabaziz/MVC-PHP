{% extends "base.html.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
    {{ include('header2.html.twig') }}
{% endblock %}

{% block content %}
    <div class="container-fluid mt-e">
        <hr class="my-3">
        <div class="row justify-content-center">
            <div class="col-md-3">
                <section class="text-center">
                    <h4 class="h4 font-weight-bold text-center mb-4">Categories</h4>
                    <div class="row justify-content-center">
                        {% for item in 1..10 %}
                            <div class="col col-md-12 mb-1">
                                <a href="{{ applicationurl }}recipe" class="btn btn-outline-primary waves-effect btn-block border">
                                    Card title
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </section>
            </div>
            <div class="col-md-9">
                <section>
                    <h4 class="h4 font-weight-bold text-center mb-4">All Recipes</h4>
                    <div class="row no-gutters justify-content-center">
                        {% for item in 1..12 %}
                            <div class="col-12 col-sm-6 col-md-4 mb-4 px-1 text-left">
                                <div class="card card-cascade ">
                                    <div class="view view-cascade overlay">
                                        <img class="card-img-top" src="{{ applicationurl }}img/img%20(147).jpg" alt="Card image cap" title="Card image cap">
                                        <a href="{{ applicationurl }}recipe/details">
                                            <div class="mask rgba-white-slight"></div>
                                        </a>
                                    </div>
                                    <div class="card-body card-body-cascade  z-depth-2">
                                        <h6 class="pink-text pb-2 pt-1">
                                            <i class="fa fa-cutlery"></i>
                                            Culinary</h6>
                                        <h5 class="card-title">
                                            <a href="{{ applicationurl }}recipe/details">Card title</a>
                                        </h5>
                                        <p class="card-text">Text Description</p>
                                        <a href="{{ applicationurl }}recipe/details" class="btn btn-block btn-unique px-0">Details</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}